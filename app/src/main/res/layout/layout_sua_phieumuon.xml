<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:paddingHorizontal="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_margin="10dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:textColor="#000000"/>
        <TextView
            android:id="@+id/lblMaPM"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã Phiếu: "
            android:paddingHorizontal="20dp"
            android:layout_marginBottom="15dp"
            android:textColor="#FF0000"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thành viên: "
            android:paddingHorizontal="20dp"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/spnThanhVien_Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sách: "
            android:paddingHorizontal="20dp"
            android:textColor="#000000"/>
        <Spinner
            android:id="@+id/spnSach_Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginBottom="5dp"/>
        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Ngày: "-->
        <!--            android:textSize="18dp"-->
        <!--            android:layout_marginVertical="5dp"-->
        <!--            android:paddingHorizontal="20dp"-->
        <!--            android:textColor="#000000"/>-->
        <!--        <TextView-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:text="Tiền thuê: "-->
        <!--            android:textSize="18dp"-->
        <!--            android:layout_marginVertical="5dp"-->
        <!--            android:paddingHorizontal="20dp"-->
        <!--            android:textColor="#000000"/>-->
        <EditText
            android:id="@+id/txtNgayThue_Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ngày thuê"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="none"
            android:drawableLeft="@drawable/calendar"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <EditText
            android:id="@+id/txtTienThue_Up"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Tiền thuê"
            android:clickable="false"
            android:cursorVisible="false"
            android:focusable="false"
            android:inputType="none"
            android:drawableStart="@drawable/wallet"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="5dp"
            android:padding="10dp"/>
        <CheckBox
            android:id="@+id/chkTrangThai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:text="Đã trả sách"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="end"
            android:orientation="horizontal">
            <Button
                android:id="@+id/btnHuy_PM"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:text="Hủy"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnUpdate_PM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textColor="#8692F7"
                android:background="#00000000"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>